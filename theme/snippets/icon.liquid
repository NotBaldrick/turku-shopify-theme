{% if class == blank %}
  {% assign classes = "h-7 w-7" %}
{% else %}
  {% assign classes = class %}  
{% endif %}

{% case type %}
  {% when 'shopping-bag' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
    </svg>
  {% when 'menu' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  {% when 'chevron-double-right' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
    </svg>
  {% when 'chevron-double-left' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
    </svg>
  {% when 'plus-circle' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  {% when 'check-circle' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  {% when 'x-circle' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  {% when 'plus' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
    </svg>
  {% when 'minus' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4" />
    </svg>
  {% when 'search' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  {% when 'trash' %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{ classes }}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
    </svg>
{% endcase %}